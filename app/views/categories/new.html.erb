<div class="container-lg border form mt-4">
  <h2>Create New Category</h2>
  <%= simple_form_for(@category) do |f| %>
    <%= f.input :name %>
    <div class="d-flex justify-content-between">
      <%= f.button :submit, class: "btn btn-gradient mb-3" %>
      <%= link_to "Back to Categories", categories_path, class: "btn btn-gradient mb-3" %>
    </div>
  <% end %>
